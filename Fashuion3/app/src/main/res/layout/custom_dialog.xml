<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_cl_width"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/custom_ware_cv_cardCornerRadius"
        app:cardElevation="@dimen/custom_ware_cv_cardElevation">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/setting_re_padding"
            android:gravity="center">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_close"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dialog_iv_marginTop"
                android:layout_marginRight="@dimen/dialog_iv_marginRight"
                android:id="@+id/dialog_iv_close"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Text"
                android:layout_below="@id/dialog_iv_close"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/dialog_tv_padding"
                android:gravity="start"
                android:layout_margin="@dimen/dialog_tv_margin"
                android:id="@+id/dialog_tv_title"
                android:textStyle="bold"
                android:textSize="@dimen/dialog_tv_textSize"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Text"
                android:layout_below="@id/dialog_tv_title"
                android:layout_margin="@dimen/dialog_tv_margin"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="start"
                android:padding="@dimen/dialog_tv_padding"
                android:id="@+id/dialog_tv_msg"
                android:textSize="@dimen/dialog_tv_textSize_2"/>

            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/dialog_tv_msg"
                android:layout_margin="@dimen/dialog_cb_margin"
                android:id="@+id/dialog_cb_show"/>

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:text="@string/dialog_tutorial_tv_show_text"
                android:layout_alignBaseline="@id/dialog_cb_show"
                android:layout_toRightOf="@id/dialog_cb_show"
                android:layout_below="@id/dialog_tv_msg"
                android:layout_marginTop="@dimen/dialog_tv_marginTop"
                android:layout_marginLeft="@dimen/dialog_tv_marginLeft"
                android:textSize="@dimen/dialog_tv_textSize_3"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/dialog_tv_cb_text"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/dialog_tutorial_tv_ok_text"
                android:layout_below="@id/dialog_cb_show"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/dialog_tv_margin"
                android:padding="@dimen/dialog_tv_padding_2"
                android:gravity="center"
                android:layout_marginRight="@dimen/dialog_tv_marginRight"
                android:textStyle="bold"
                android:id="@+id/dialog_tv_ok"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
